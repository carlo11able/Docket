<p id="notice"><%= notice %></p>

<h1>answers</h1>

<table>
  <thead>
    <tr>
      <th>user_id</th>
      <th>question_id</th>
      <th>answer</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.user_id %></td>
        <td><%= answer.question_id %></td>
        <td><%= answer.answer %></td>
        <td><%= link_to 'Show', photo_question_answer_path(params[:photo_id],params[:question_id],answer) %></td>
        <td><%= link_to 'Edit', edit_photo_question_answer_path(params[:photo_id],params[:question_id],answer) %></td>
        <td><%= link_to 'Destroy', photo_question_answer_path(params[:photo_id],params[:question_id],answer), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New answer', new_photo_question_answer_path %>
<%= link_to 'Answer', photo_question_answers_path %>
